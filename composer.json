{
  "name": "mychezmoi/salesforce-client",
  "description": "Salesforce REST client for PHP",
  "keywords": [
    "crm",
    "force.com",
    "salesforce",
    "rest",
    "oauth2",
    "api"
  ],
  "license": "proprietary",
  "type": "library",
  "require": {
    "php": ">=7.4",
    "symfony/http-foundation": "5.1.*",
    "symfony/http-client": "5.1.*",
    "ext-json": "*",
    "ext-apcu": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4",
    "friendsofphp/php-cs-fixer": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Mcm\\SalesforceClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mcm\\SalesforceClient\\": [
        "src/",
        "tests/"
      ]
    }
  }
}
